<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?android:attr/selectableItemBackground"
  android:orientation="horizontal"
  android:gravity="center_vertical"
  android:paddingBottom="@dimen/sample_padding"
  android:paddingTop="@dimen/sample_padding">

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/sampleArrowView"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
      android:id="@+id/sample_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:paddingTop="4dp"
      android:textSize="16sp"
      android:textStyle="bold"
      tools:text="Title" />

    <TextView
      android:id="@+id/sample_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:paddingTop="4dp"
      android:textSize="13sp"
      tools:text="Desc" />

  </androidx.appcompat.widget.LinearLayoutCompat>

  <ImageView
    android:id="@+id/sample_image_arrow"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:src="@drawable/sample_right_arrow"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="ContentDescription" />

</androidx.appcompat.widget.LinearLayoutCompat>