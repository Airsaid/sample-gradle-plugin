<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/sampleMemoryContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airsaid.sample.extension.component.memory.MemoryView
      android:id="@+id/sampleMemoryView"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:layout_gravity="bottom"
      android:padding="12dp" />
  </FrameLayout>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/sampleMemoryButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="24dp"
    android:padding="4dp"
    android:src="@drawable/sample_visible_selector"
    app:backgroundTint="?colorPrimary"
    app:borderWidth="0dp"
    app:elevation="3dp"
    app:fabSize="mini"
    app:rippleColor="?colorPrimaryDark"
    tools:ignore="ContentDescription" />
</FrameLayout>